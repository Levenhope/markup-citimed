include ../article-card/article-card
mixin specials-wrap(isCompact)
    if (!!isCompact)
        block
    else
        .content-center
            block
mixin specials(params)
    - var isCompact = params&&params.isCompact;
    - var isOneTab = params&&params.oneTab;
    +b.SECTION.specials(class=isCompact?'_compact':'')
        +specials-wrap(isCompact)
            +e.content.tabs-holder(data-active='#special-tab')
                if (!isCompact&&!isOneTab)
                    +e.H2.title._tabs-links.h2.tabs-links #[a.tabs-link.is-active(data-target='#special-tab' href='javascript:;') Акции] и #[a.tabs-link(data-target='#news-tab' href='javascript:;') Новости]
                else if (isCompact)
                    +e.H2.title.h3 Акции
                else
                    +e.H2.title.h2 Акции
                +e.tabs
                    +e.tab.tab.is-active(id='special-tab')
                        +e.list(data-compact=isCompact)
                            +e.item
                                +article-card({img: '../assets/img/article-card-img.jpg'})
                            +e.item
                                +article-card({img: '../assets/img/article-card-img.jpg'})
                            +e.item
                                +article-card({img: '../assets/img/article-card-img.jpg'})
                            +e.item
                                +article-card({img: '../assets/img/article-card-img.jpg'})
                            +e.item
                                +article-card({img: '../assets/img/article-card-img.jpg'})
                            +e.item
                                +article-card({img: '../assets/img/article-card-img.jpg'})
                        +e.slider-nav
                            +e.BUTTON.slider-arrow.button._control._prev
                                +svgUse(10, 8, 'icon-arrow-down-s')
                            +e.slider-pages
                            +e.BUTTON.slider-arrow.button._control._next
                                +svgUse(10, 8, 'icon-arrow-down-s')
                    if (!isCompact&&!isOneTab)
                        +e.tab.tab(id='news-tab')
                            +e.list(data-compact=isCompact)
                                +e.item
                                    +article-card({img: '../assets/img/article-card-img-1.jpg'})
                                +e.item
                                    +article-card({img: '../assets/img/article-card-img-1.jpg'})
                                +e.item
                                    +article-card({img: '../assets/img/article-card-img-1.jpg'})
                                +e.item
                                    +article-card({img: '../assets/img/article-card-img-1.jpg'})
                                +e.item
                                    +article-card({img: '../assets/img/article-card-img-1.jpg'})
                                +e.item
                                    +article-card({img: '../assets/img/article-card-img-1.jpg'})
                            +e.slider-nav
                                +e.BUTTON.slider-arrow.button._control._prev
                                    +svgUse(10, 8, 'icon-arrow-down-s')
                                +e.slider-pages
                                +e.BUTTON.slider-arrow.button._control._next
                                    +svgUse(10, 8, 'icon-arrow-down-s')
                +e.buttons
                    +e.A.button._specials.button.button_stroke(href='#') Все акции
                    +e.A.button._news.button.button_stroke(href='#') Все новости