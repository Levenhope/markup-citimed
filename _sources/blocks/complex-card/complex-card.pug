mixin complex-card(params)
    - var isBig = params&&params.isBig;
    - var isWide = params&&params.isWide;
    - var bigClass = isBig ? "complex-card_big" : "";
    - var wideClass = isWide ? "complex-card_wide" : "";
    +b.ARTICLE.complex-card(class=bigClass+' '+wideClass+' cart-btn-parent')
        if isBig
            +e.header
                +e.code 50.0.H139.900
                +e.duration
                    +svgUse(18, 18, 'icon-clock')(class='complex-card__duration-icon')
                    +e.duration-text 4 дня
        +e.content
            +e.A.title(href='#') Диагностика сосудистых заболеваний головного мозга
            if isBig
                +e.A.tip(href='#') Что входит в состав комплекса
            +e.footer
                +e.price 4 600 #[span.rub ₽]
                +e.BUTTON.add.button.button_cart(class=params && params.added ? 'is-added' : '')
                    span.button__inner
                        +svgUse(18, 18, 'icon-cart')
                    span.button__remove
                        +svgUse(7, 7, 'icon-close')
        if params && params.img
            +e.img-holder
                +e.PICTURE.img
                    if params.imgMob
                        +e.SOURCE(srcset=params.imgMob media="(max-width: 1024px)")
                    +e.IMG.img(src=params.img alt='')